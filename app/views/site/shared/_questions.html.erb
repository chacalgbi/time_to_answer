  <div class="jumbotron">
  	<h3> <%= msg %> </h3>
    <hr class="my-4">
  </div>

<% @questions.each do |question| %>
	<%= form_with url: site_answer_path do |form| %>
		<div class="card">
		  <div class="card-header">
		  	<span class="badge badge-info" style="margin-right: 10px;">
		  		<%= link_to "#{question.subject.description} (#{question.subject.questions.count})", site_search_subject_path(question.subject_id, question.subject.description), style:"color: white" %>		
		  	</span>
		    <%= question.description %>
		  </div>
		  <div class="card-body">
		    <blockquote class="blockquote mb-0">
		      	<ul>
		      		<% question.answers.each do |answer| %>
		      			<li style="list-style: none;">
							<div class="radio">
							  <%= radio_button_tag 'answer_id', answer.id %>
							  <label><%= answer.description %></label>
							</div>
						</li>
		      		<% end %>
		      		<li style="list-style: none;"><%= form.submit "Responder", id:"submit_#{question.id}", class:"btn btn-defaut" %></li>
		      	</ul>
		    </blockquote>
		  </div>
		</div>
	<% end %>
<% end %>

<div class="text-center">
	<%= paginate @questions %>
</div>