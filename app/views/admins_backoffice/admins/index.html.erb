<div class="row">
	<div class="col-lg-12">
		<h1 class="page-header">Lista de Administradores</h1>
	</div>
</div>

<div class="table-responsive">
	<table class="table table-striped table-bordered table-hover">
	  <thead>
	    <tr>
	      <th scope="col">ID</th>
	      <th scope="col">Email</th>
	      <th scope="col">
	      	<%= link_to new_admins_backoffice_admin_path, class: "btn btn-success btn-circle" do %>
	      		<i class="fa fa-plus"></i>
	      	<% end %>
	      </th>
	    </tr>
	  </thead>
	  <tbody>
	  	<% @admins.each do |admin| %>
		    <tr>
		      <th scope="row"><%= admin.id %></th>
		      <td><%= admin.email %></td>
		      <td style="width: 100px"><%= link_to edit_admins_backoffice_admin_path(admin), class:"btn btn-primary btn-circle" do %><i class="fa fa-edit"> </i><% end %></td>
		      <td style="width: 100px"><%= link_to admins_backoffice_admin_path(admin), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: "Deseja realmente excluir este administrador?"} do %><i class="fa fa-minus"> </i><% end %></td>
		    </tr>
	    <% end %>
	  </tbody>
	</table>
	<div style="text-align: center;"><%= paginate @admins %></div>
</div>